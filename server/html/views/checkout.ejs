  <title>BoardShop</title>


</head>
<body>
  <nav class="site-header sticky-top py-1">
    <div class="container d-flex justify-content-between">
      <div>
        <a class="navbar-brand" href="/..">
          <img src="/public/images/boards.png" height="30" class="d-inline-block align-top" alt="">
        </a>
      </div>
    </div>
  </nav>

<div class="container">
  <div class="py-1 text-center">
    <img class="d-block mx-auto mb-4" src="{{ site.baseurl }}/docs/{{ site.docs_version }}/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h2>Checkout form</h2>
  </div>

  <div class="row">
    <div class="col-md-12 order-md-2 mb-4 justify-content-center">
      <ul class="list-group mb-3">

        <% for (var i=0; i<boards.length; i++) { %>
        <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0"><%= boards[i].name %></h6>
            <small class="text-muted"><%= boards[i].description %></small>
          </div>
          <span class="text-muted">$<%= boards[i].price %></span>
        </li>
        <% } %>


        
        <li class="list-group-item d-flex justify-content-between">
          <span>Total (USD)</span>
          <strong>$<%= total %></strong>
        </li>


      </ul>
      <form action="/charge" method="POST">
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key='<%= publicKey %>'
    data-amount="<%= sTotal %>"
    data-name="AnthonyMcLeod"
    data-description="Boards"
    data-image="/public/images/boardsb.png"
    data-locale="auto"
    data-currency="usd">
  </script>
  <input hidden="true" type="text" name="price" value="<%= total %>">
</form>
    </div>
    
  </div>
</div>

<footer class="container py-5">
    <div class="row">
      <div class="col-6 col-md">
        <h5>Features</h5>
        <ul class="list-unstyled text-small">
